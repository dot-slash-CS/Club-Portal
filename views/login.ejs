<head>

<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="loginStyle.css" rel="stylesheet">
<link href="clubListStyle.css" rel="stylesheet">
<script src="login.js"></script>
</head>



<body>
  <div class="container">

<div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
  <header class="masthead mb-auto">
    <div class="inner">
      <h3 class="masthead-brand">Ohlone Club Portal</h3>
      <nav class="nav nav-masthead justify-content-center">
        <a class="nav-link active" href="http://localhost:8000/index">Home</a>
        <a class="nav-link" a href="http://localhost:8000/clubList" target="_top">Clubs</a>
        <a class="nav-link" a href="mailto:cin@dotslashcs.club?Subject=Club%20Portal" target="_top">Contact</a>
        <a class="nav-link" href="http://localhost:8000/login">Log In</a>

      </nav>
    </div>
  </header>
</div>
</div>

<div class="container">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-6">
								<a href="#" class="active" id="login-form-link">Login</a>
							</div>
							<div class="col-xs-6">
								<a href="#" id="register-form-link">Register</a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<form id="login-form" action="https://phpoll.com/login/process" method="post" role="form" style="display: block;">
									<div class="form-group">
										<input type="email" name="email" id="email" tabindex="1" class="form-control" onkeyup="validateemail()" placeholder="Club Email" value="">
                    <label id="commentemailprompt"> </label>
                  </div>
									<div class="form-group">
										<input type="password" name="password" id="password" onkeyup="validatepassword()" tabindex="2" class="form-control" placeholder="Password">
                    <label id="commentpasswordprompt"> </label>
                  </div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">
											</div>
										</div>
									</div>
								</form>
								<form id="register-form" action="https://phpoll.com/register/process" method="post" role="form" style="display: none;">
									<div class="form-group">
										<input type="text" name="cname" id="commentname" onkeyup="validatename()" tabindex="1" class="form-control" placeholder="Club Name" value="">
                    <label id="commentnameprompt"> </label>
                  </div>
									<div class="form-group">
										<input type="email" name="cemail" id="commentemail" onkeyup="validateemail()" tabindex="1" class="form-control" placeholder="Club Email Address" value="">
                    <label id="commentemailprompt"> </label>
                  </div>
									<div class="form-group">
										<input type="password" name="cpassword" id="commentpassword" onkeyup="validatepassword()" tabindex="2" class="form-control" placeholder="Password">
                    <label id="commentpasswordprompt"> </label>
                  </div>
                  <div class="form-group">
										<textarea id="commentdescription" onkeyup="validatedescription()" placeholder="Club Description" tableindex="2" rows="4" cols="70" class="form-control" name="cdesc"></textarea>
                    <label id="commentdescriptionprompt"></label>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

</body>
